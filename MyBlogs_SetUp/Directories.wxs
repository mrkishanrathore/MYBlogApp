<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Fragment>
		<!-- Define the directory structure where files and other components of your installer will be installed. -->

		<?if $(var.Platform)=x64 ?>
		<!-- Program Files (64bit) folder -->
		<StandardDirectory Id="ProgramFiles64Folder">
			<Directory Id="INSTALLFOLDER" Name="!(loc.ProductNameFolder)" />
		</StandardDirectory>
		<?else?>
		
		<!-- Program Files (32bit) folder -->
		<StandardDirectory Id="ProgramFilesFolder">
			<Directory Id="INSTALLFOLDER" Name="!(loc.ProductNameFolder)" />
		</StandardDirectory>
		<?endif?>
	</Fragment>
</Wix>
